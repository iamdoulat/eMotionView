
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user's role is Admin.
    // This requires reading the user's document in the 'users' collection.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Helper function to check if a user is any kind of staff member.
    function isStaff() {
       return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Products, categories, brands, attributes, and suppliers are public-readable.
    // Only staff can write/modify them.
    match /(products|categories|brands|attributes|suppliers)/{docId} {
      allow read: if true;
      allow write: if isStaff();
    }

    // Approved reviews are public-readable.
    // Users can create their own reviews.
    // Staff can manage all reviews.
    match /reviews/{reviewId} {
      allow get: if resource.data.status == 'approved' || isStaff();
      // Listing all reviews (pending, etc.) is an admin/staff action.
      allow list: if isStaff();
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isStaff();
    }
    
    // Customers can create, read, and update their own data.
    // Staff can view and manage all customer data.
    // Only Admins can delete customer accounts.
    match /customers/{userId} {
      allow get, update: if request.auth.uid == userId || isStaff();
      allow create: if request.auth.uid == userId;
      allow list: if isStaff();
      allow delete: if isAdmin();
    }
    
    // Staff members can be viewed by other staff.
    // Admins can manage all staff members.
    match /users/{userId} {
      allow read, list: if isStaff();
      // Allow any staff to add/edit other staff. For stricter control, change to isAdmin().
      allow create, update: if isStaff();
      // Only Admins can delete staff accounts.
      allow delete: if isAdmin();
    }
    
    // Customers can create orders for themselves.
    // Staff can view and manage all orders.
    match /orders/{orderId} {
        allow get: if request.auth.uid == resource.data.userId || isStaff();
        allow list: if isStaff();
        allow create: if request.auth.uid == request.resource.data.userId;
        allow update: if isStaff();
        // Deleting orders should be a highly restricted action.
        allow delete: if isAdmin();
    }
  }
}
