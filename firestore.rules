rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Checks if the user has an 'Admin' or 'Manager' role in the 'users' collection.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Manager'];
    }

    // Collection Rules

    // Users collection (for admins, staff)
    match /users/{userId} {
      // Admins can read/write any user document.
      // A user can read their own document to allow isAdmin() to work.
      allow read: if isAdmin() || isOwner(userId);
      allow write: if isAdmin();
    }

    // Customers collection
    match /customers/{userId} {
      // A customer can read/update their own profile. Admins can manage any customer.
      allow get, update: if isOwner(userId) || isAdmin();
      // Only admins can list, create, or delete customers.
      allow list, create, delete: if isAdmin();
    }
    
    // Public content (homepage settings, etc.)
    match /public_content/{document=**} {
      // Anyone can read public content.
      allow read;
      // Only admins can write to public content.
      allow write: if isAdmin();
    }

    // Products and related collections
    match /products/{productId} {
      allow read;
      allow write: if isAdmin();
    }

    match /categories/{docId} {
      allow read;
      allow write: if isAdmin();
    }
    
    match /brands/{docId} {
        allow read;
        allow write: if isAdmin();
    }

    match /attributes/{docId} {
        allow read;
        allow write: if isAdmin();
    }

    match /suppliers/{docId} {
        allow read;
        allow write: if isAdmin();
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can get a single approved review, or list all approved reviews.
      allow get: if resource.data.status == 'approved';
      allow list: if query.get('status') == 'approved';
      // Any authenticated user can create a review (which defaults to 'pending').
      allow create: if request.auth != null;
      // Only admins can update (approve/reject/reply) or delete reviews.
      allow update, delete: if isAdmin();
    }

    // Wishlists collection
    match /wishlists/{userId} {
       // Only the owner of the wishlist can read or write to it.
       allow read, write: if isOwner(userId);
    }
  }
}
