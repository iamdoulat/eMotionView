
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Helper Functions =====
    function isAuth() {
      return request.auth != null;
    }
    function isUserId(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    function isAdmin() {
      // Check if user is an Admin
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    function isStaff() {
      // Check if user document exists in the 'users' collection (admins, managers, staff)
      return isAuth() && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // ===== Public Collections (read-only for all, write for admin) =====
    match /products/{docId}      { allow read: if true; allow write: if isAdmin(); }
    match /categories/{docId}    { allow read: if true; allow write: if isAdmin(); }
    match /brands/{docId}        { allow read: if true; allow write: if isAdmin(); }
    match /attributes/{docId}    { allow read: if true; allow write: if isAdmin(); }
    match /suppliers/{docId}     { allow read: if true; allow write: if isAdmin(); }

    // ===== Reviews =====
    // Anyone can read approved reviews. Staff can read all for moderation.
    // Any authenticated user can create. Staff can update (approve/reply). Admins can delete.
    match /reviews/{reviewId} {
      allow read: if resource.data.status == 'approved' || isStaff();
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow update: if isStaff();
      allow delete: if isAdmin();
    }

    // ===== Staff Users =====
    // Staff can read other staff members' data. Users can only update their own data. Admins can update/delete any.
    match /users/{userId} {
      allow read: if isStaff();
      allow create: if isAdmin();
      allow update: if isUserId(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ===== Customers =====
    // Customers can read/update their own data. Staff can read all customer data. Admins can update/delete any.
    match /customers/{userId} {
      allow read: if isUserId(userId) || isStaff();
      allow create: if isUserId(userId);
      allow update: if isUserId(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ===== Wishlists =====
    // Users can only access their own wishlist.
    match /wishlists/{userId} {
      allow read, write: if isUserId(userId);
    }
  }
}
