rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check if the user's role is Admin by looking up their document in the 'users' collection.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin'];
    }

    function isStaff() {
      // Check if the user's role is Admin or Manager by looking up their document in the 'users' collection.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Manager'];
    }

    // Collection Rules
    
    // Products can be read by anyone, but only written by staff.
    match /products/{productId} {
      allow read;
      allow write: if isStaff();
    }
    
    // Categories, Brands, etc. can be read by anyone, written by staff.
    match /categories/{docId} {
      allow read;
      allow write: if isStaff();
    }
    match /brands/{docId} {
      allow read;
      allow write: if isStaff();
    }
    match /attributes/{docId} {
      allow read;
      allow write: if isStaff();
    }
    match /suppliers/{docId} {
      allow read;
      allow write: if isStaff();
    }

    // Reviews can be created by any logged-in user.
    // They can only be viewed if their status is 'approved'.
    // Staff can update or delete any review.
    match /reviews/{reviewId} {
      allow get: if resource.data.status == 'approved';
      allow list: if query.filters.size() > 0 && query.filters[0].field == 'status' && query.filters[0].value == 'approved';
      allow create: if request.auth != null;
      allow update, delete: if isStaff();
    }

    // Staff user documents. Only admins can list/create/delete them.
    // An individual staff member can read/update their own document.
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create, list, delete: if isAdmin();
    }

    // Customer documents. Staff can manage all customers.
    // A customer can only get or update their own document.
    match /customers/{userId} {
      allow get, update: if isOwner(userId) || isStaff();
      allow create: if isOwner(userId) || isStaff();
      allow list, delete: if isStaff();
    }

    // Wishlists are private to the owner.
    match /wishlists/{userId} {
       allow read, write: if isOwner(userId);
    }

    // Public content (like homepage settings) can be read by anyone,
    // but only written to by staff.
    match /public_content/{document=**} {
      allow read;
      allow write: if isStaff();
    }
  }
}
