rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is an admin or manager
    function isStaffAdmin(userId) {
      // Check for existence first to avoid errors on non-existent documents
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role in ['Admin', 'Manager'];
    }

    // Default deny all access to prevent unintentional open collections
    match /{document=**} {
      allow read, write: if false;
    }

    // Admins can manage staff users in the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
    
    // Customers can manage their own documents in the 'customers' collection
    match /customers/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Allow any authenticated user to create a customer document (sign-up)
      allow create: if request.auth != null;
    }
    
    // Wishlists are private to the user who owns them
    match /wishlists/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products, categories, and other product-related data are public to read
    // but only writable by administrators.
    match /products/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
    match /categories/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
    match /brands/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
    match /attributes/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
    match /suppliers/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }

    // Reviews have more granular rules
    match /reviews/{reviewId} {
      // Anyone can read approved reviews. Admins can read all reviews.
      allow read: if resource.data.status == 'approved' || (request.auth != null && isStaffAdmin(request.auth.uid));
      // Only authenticated users can create reviews for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only admins can update (approve/reject/reply) reviews
      allow update: if request.auth != null && isStaffAdmin(request.auth.uid);
      // Admins or the original author can delete a review
      allow delete: if request.auth != null && (isStaffAdmin(request.auth.uid) || resource.data.userId == request.auth.uid);
    }
    
    // Public content (like homepage layout) is readable by all, writable by admins.
    match /public_content/{docId} {
      allow read: if true;
      allow write: if request.auth != null && isStaffAdmin(request.auth.uid);
    }
  }
}
