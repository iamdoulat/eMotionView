
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin/Manager roles
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Manager'];
    }

    // Products can be read by anyone, but only written by Admins/Managers
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reviews can be read by anyone if approved.
    // Users can create reviews, but only admins can update/delete them.
    match /reviews/{reviewId} {
      allow read: if resource.data.status == 'approved';
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Wishlists are private to the owner.
    match /wishlists/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 'users' collection (for staff) can only be accessed by other staff.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    // 'customers' collection is accessible by admins and the customer themselves.
    match /customers/{userId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Public content like the homepage can be read by anyone, but only written by admins.
    match /public_content/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    