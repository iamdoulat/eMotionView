rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && 
             (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
              get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Manager');
    }
    
    // Product images are publicly readable, but only admins can write
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User avatars can be read by anyone, but can only be written by the owner or an admin
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Homepage assets can be read by anyone, but only admins can write
    match /homepage/{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // Footer assets can be read by anyone, but only admins can write
    match /footer/{allPaths=**} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    // By default, deny read/write to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
