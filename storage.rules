
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is an admin by reading their role from Firestore.
    // This requires the user to be authenticated and have a corresponding document in the 'users' collection.
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Manager'];
    }

    // Allow admins to read and write anywhere in the storage bucket.
    // This is necessary for uploading product images, category images, etc.
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
