rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is an administrator or manager
    function isAdmin() {
      // Check if the user is authenticated and their role is Admin or Manager in Firestore
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Manager'];
    }
    
    // Allow public read access to all files by default
    // This allows anyone to view images, which is necessary for the storefront.
    match /{allPaths=**} {
      allow read;
      
      // Restrict all write operations (create, update, delete) to admins and managers.
      // This is a secure catch-all rule.
      allow write: if isAdmin();
    }
  }
}
