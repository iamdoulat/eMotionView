
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // By default, allow public read access to all files.
    // This is common for files like product images that need to be displayed publicly.
    match /{allPaths=**} {
      allow read;

      // Deny all write operations (create, update, delete) from the client-side.
      // This forces all uploads to go through a secure backend or server action,
      // which is a more secure pattern.
      allow write: if false;
    }
  }
}
