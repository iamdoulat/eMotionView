
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Function to check if a user is an Admin or Manager
    function isStaff() {
      // Get the user's document from the 'users' collection in Firestore
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      // Check if the user's role is Admin or Manager
      return request.auth != null && userDoc.data.role in ['Admin', 'Manager'];
    }

    // Match all files in the bucket
    match /{allPaths=**} {
      // Allow anyone to read files (public access)
      allow read;
      // Allow write (upload, update, delete) only if the user is staff
      allow write: if isStaff();
    }
  }
}
